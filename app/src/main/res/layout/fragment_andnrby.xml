    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_anbys"
    >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_andnrby_fragment"
        android:layout_width="match_parent"
